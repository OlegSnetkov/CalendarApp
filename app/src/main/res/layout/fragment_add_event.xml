<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_name_event"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/event_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_name_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_description"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_text"
        android:hint="@string/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_name_event">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/type_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_marginBottom="24dp"
        android:text="@string/Enter_date_and_time"
        app:layout_constraintBottom_toTopOf="@+id/guideline_from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="235dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_normal"
        android:text="@string/set"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_from" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_set_range_date"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_normal"
        android:backgroundTint="@color/colorSecondary"
        android:text="@string/date_or_range_dates"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_from" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="296dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_normal"
        android:text="@string/set"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_to" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_set_start_time_event"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_normal"
        android:backgroundTint="@color/colorSecondary"
        android:text="@string/from_time"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_to"
        app:layout_constraintEnd_toStartOf="@+id/button_set_finish_time_event"
        app:layout_constraintTop_toTopOf="@+id/guideline_to" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_set_finish_time_event"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_normal"
        android:backgroundTint="@color/colorSecondary"
        android:text="@string/to_time"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_to" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_new_event"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_normal"
        android:layout_marginTop="@dimen/space_huge"
        android:backgroundTint="@color/colorSecondary"
        android:text="@string/add_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_to" />

</androidx.constraintlayout.widget.ConstraintLayout>