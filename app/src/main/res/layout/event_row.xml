<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_medium">

    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_normal"
        Tools:text="Event name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_normal"
        Tools:text="Event description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

    <TextView
        android:id="@+id/tv_begin_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_normal"
        Tools:text="09-00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_description" />

    <TextView
        android:id="@+id/tv_dash_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_small"
        android:text="@string/dash_symbol"
        app:layout_constraintStart_toEndOf="@+id/tv_begin_event_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_description" />

    <TextView
        android:id="@+id/tv_finish_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        Tools:text="09-30"
        app:layout_constraintStart_toEndOf="@+id/tv_dash_symbol"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_description" />

</androidx.constraintlayout.widget.ConstraintLayout>